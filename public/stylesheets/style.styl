body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background: #757575
a
  color: #00B7FF
canvas#whiteboard
  background: #FFF
  cursor: pointer
ul#colorSelect
  padding: 0
  margin: 0
  border: 3px solid #000
  height: 22px
  box-sizing: border-box
  list-style: none
  li
    margin: 0
    padding: 0
    display: inline-block
    width: 16px
    height: 16px
    &.active
      margin: 1px
      border: 1px solid #000
      outline: 1px solid #FF0
      width: 12px
      height: 12px